<%= form_with(model: car, local: true) do |form| %>
  <% if car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
        <% car.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :make %>
    <%= form.select :make, options_for_select(['Toyota', 'Ford', 'Honda', 'Chevrolet'], car.make) %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.select :model, options_for_select(['Corolla', 'Mustang', 'Civic', 'Camaro'], car.model) %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.select :year, options_for_select((2000..2023).to_a, car.year) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>